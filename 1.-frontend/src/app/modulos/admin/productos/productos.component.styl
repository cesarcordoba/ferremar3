
@import  '../../../../defaults.styl'

.container
	display flex
	justify-content center
	.content
		width 98%

		.modos
			margin 5px 0
			display flex
			justify-content flex-start
			align-items center
			span
				margin 0 10px

		.procesos-content
			padding 0px
			margin 5px 0
			height 20px
			width 100%
			display flex
			flex-direction row
			div
				height 20px
				display flex
				justify-content center

.linea
	display flex
	margin 5px 0
	&>*
		flex 1

.filtros
	display flex
	.filtro-content
		width 100%

	button
		background-color verde
		border-radius 0px


.status
	height 36px
	width 100%
	background-color white
	@extend .boxshadow
	// padding 0 50px

	.mat-form-field-wrapper
		padding 0px !important
		height 36px
		.mat-form-field-flex
			height 36px
			.mat-form-field-infix
				padding 0px
				margin 0px
				border 0px
				border-top 0.34375em solid !important
				input
					height 36px
			   // .mat-form-field-label-wrapper
		.mat-form-field-underline
			bottom 0px

.search
	margin-left 11px
	height 75px
	margin-top 5px
