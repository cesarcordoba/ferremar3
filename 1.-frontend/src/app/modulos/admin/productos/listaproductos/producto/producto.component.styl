
@import  '../../../../../../defaults.styl'


mat-list
    padding 0px

h4
    white-space normal !important
    font-weight 800 !important
    font-size 13px !important

p
    font-size 11px !important

.imagen
    width 50px
    height 50px
    display: flex
    justify-content: center
    align-items: center

    .portada
        width 40px
        height 40px
        border-radius: 40px
        overflow: hidden;
        z-index: 2
        img
            width 40px
            height 40px

    .dimensiones
        z-index: 1
        position: absolute;
        display: grid;
        grid-template-columns auto auto
        border-radius 50px
        overflow: hidden;
        .dimension
            height 25px
            width 25px
            padding 0px
            min-width 0px
