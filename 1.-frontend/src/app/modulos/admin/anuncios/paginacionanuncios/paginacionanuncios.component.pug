

        

button(mat-button, (click)="crear()") Crear Anuncio
mat-table(mat-table, [dataSource]="anuncios.items", class="mat-elevation-z8")
    ng-container(matColumnDef="nombre")
        mat-header-cell( *matHeaderCellDef) Nombre
        mat-cell( *matCellDef="let element") {{element.nombre}}
    ng-container(matColumnDef="accion")
        mat-header-cell( *matHeaderCellDef) Acci√≥n
        mat-cell( *matCellDef="let element")
            button(mat-button, (click)="ir(element)")
                mat-icon edit
    mat-header-row( *matHeaderRowDef="['nombre', 'accion']")
    mat-row(*matRowDef="let row; columns: ['nombre', 'accion'];")
mat-paginator([length]="anuncios.paginas * filtro.limite", [pageSize]="10", [pageSizeOptions]="[5, 10, 25, 100]", (page)="cambioPagina($event)")
