
@import  '../../../../defaults.styl'


.container
    display: flex
    justify-content: center
    align-items: center
    .content
        width 95%
        .producto
            display:  flex

.producto, .versiones
    @extends .borde

.producto
    section
        @extends .borde



section
    display flex
    flex 1
    padding 5px
    flex-direction: column;
    .titulo
        @extends .borde
        background-color: negro
        color white
        font-family: arial
        span
            margin 0 10px
    imagenportada, fichaproducto, versiones
        flex 1
