
@import  '../../../../../../defaults.styl'
.grid-vendidos-container
    .grid-vendidos-content
        transition(300ms , 0)
        .vendidos-content
            transition(300ms , 0)
            background-color gray
            width 100%
            cursor pointer
            overflow hidden
            position relative
            height 230px
            margin-bottom 20px
            &:focus
                outline 0px
            &:hover
                transform scale(1.048)
            .nombre-vendidos
                display flex
                flex-direction column
                justify-content center
                align-items center
                background-color gray
                width 100%
                height 100%
                p
                    font-size 14px
                    color white
                    margin 0
            .botones-vendidos
                z-index 2
                opacity 0.6
                position absolute
                bottom 1px
                width 100%
                height 66px
                display flex
                flex-direction row
                justify-content space-between
                align-items center
                background-color negro
                .info-content
                    z-index 5 !important
                    display flex
                    flex-direction row
                    justify-content flex-start
                    align-items center
                    .descripcion
                        margin-left 24px
                        width 60%
                        p
                            font-size 12px
                            color white
                    .boton-vermas
                        .btn-vermas-grid
                            min-height inherit
                            min-width inherit
                            line-height 28px
                            span
                                color white
                                font-size 10px
                                text-transform capitalize
                                font-weight bolder

                .carrito-vendidos
                    z-index 5 !important
                    width 15%
                    height 36px
                    .btn-vermas-carrito
                        width 70%
                        height 36px
                        min-height inherit
                        min-width inherit
                        line-height 28px
                        background-color naranja
                        display flex
                        justify-content center
                        align-items center
                        img
                            margin-right 8px
                            height 24px