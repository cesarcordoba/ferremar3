
@import  '../../../../../../defaults.styl'


.slider-principal
	.slider
		height 400px !important
		display flex
		align-items center
		.slick-dotted.slick-slider
			margin-bottom inherit !important
		.carousel
			height 400px
			width 100%
			.slick-list
				height 400px
				.slick-track
					height 400px
					.slide
						background-color negro
						position relative
						z-index 1
						&:focus
							outline 0px
						// .imagen-principal
						// 	cursor pointer
						// 	height 350px
						// 	img
						// 		width 100%
						// 		height 100%
						p
							font-size 50px
							color white
							margin 0
							text-align center
						.btns-movilidad
							position absolute
							z-index 2
							right 0
							left 0
							top 190px
							bottom 0
							margin auto
							width 236px
							height 24px
							.comprar, .detalles
								background-color naranja
								line-height 23px
								border-radius 0px
								width 113px
								span
									color white
									font-size 10px
									font-weight bolder
							.comprar
								margin-right 10px
			.slick-next
				display none
			.slick-prev
				display none
								
	.slick-dots
		bottom 20px
		button
			&:before
				color white
				font-size 8px
		.slick-active
			button
				&:before
					color white
					font-size 8px