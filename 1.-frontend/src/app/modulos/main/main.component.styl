footer
	background-color negro
	.contenedor-abajo
		display flex
		flex-direction  row
		justify-content space-between
		align-items center
		.copyrigth
			display flex
			flex-direction column
			margin-left 30px
			p
				color white
				font-size 11px
				margin 5px
			.aviso
				display flex
				flex-direction row
				justify-content flex-start
				.btn-privacidad, .btn-condiciones
					height 16px
					display flex
					justify-content center
					align-items center
					line-height inherit !important
					span
						font-size 8px
						color white
						text-transform capitalize
				.linea-abajo
					margin-top 1px
					height 8px
					border 0.5px solid white
		.contactos
			display flex
			flex-direction row
			justify-content space-between
			align-items center
			width 25%
			margin-right 10vw
			.correo, .telefono
				display flex
				flex-direction row
				justify-content center
				align-items center
				p
					margin 0px
					color white
					font-size 10px
					font-weight bolder
		.imagen
			background-color white
			width 10%
			display flex
			justify-content center
			align-items center
			.logo-abajo
				height 70px
				img
					width 79%
					height 96%