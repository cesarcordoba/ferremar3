
@import  '../../../../../defaults.styl'


section
    display flex
    imagenes
        flex 3
    aside
        flex 2
        display flex
        flex-direction column
        border 1px solid naranja 
        padding 13px
        section
            display flex
            &.versiones
                width 100%
                flex-direction column
                version
                    width 100%


.titulo
    margin-bottom 20px
    h1
        margin 0px

.advertencia-container
	display flex
	margin 5px 0
	width 100%
	justify-content center
	.advertencia
		background-color amarillo
		border-radius 4px
		padding 1px 16px
		text-align center
		p
			margin 0px
			font-size 11px
