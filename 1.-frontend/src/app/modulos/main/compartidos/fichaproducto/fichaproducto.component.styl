
@import  '../../../../../defaults.styl'




.producto-content
	border 1px solid rgba(0, 49, 67, .1)
	background-color white
	&.versatil
		@media mobile
			display flex
			overflow visible
			.marca-container
				top -15px !important
			portada
				width 40%
				min-width 141px
	.bandera
		width 80px
		height 80px
		position absolute
		z-index 5
		img
			width 100%
			height 100%

	&:hover
		box-shadow 0 -1px 0 #e5e5e5, 0 0 2px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.24)
		img
			transform scale(.9)
	.imagen
		width 100%
		height 150px
		// background-color negro
		picture
			img
				width 100%
				transition(500ms, 0)
	.info
		position:  relative
		margin-top: 33px
		@media mobile
			width 100%
		.marca-container
			position:  absolute;
			width 100%
			display: flex
			justify-content: flex-end;
			top -25px
			.marca
				background-color:  white
				border 1px solid rgba(0, 49, 67, .1)
				margin 0 5px
				border-radius: 20px
				padding: 2px 10px
				font-size 11px

		.titulo
			font-family Poopins
			font-size 13px
			line-height 13px
			margin 5px 5px
			display: flex
			align-items: center;
			.colores
				button.color
					border 1px solid rgba(0,0,0 .1)
					min-width 15px
					min-height 15px
					width 15px !important
					padding 0px
					height 15px !important
					border-radius 4px
			h2
				padding 0px
				font-size 12px
