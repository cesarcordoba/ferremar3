
@import  '../../../../defaults.styl'


.container
    display flex
    justify-content center
    .content
        width 80%
        margin-top 50px
        display flex
        flex-direction column


.contenido
    display: flex
    justify-content: center;
    align-items: center

.imagen, img
    height 80px
    width 80px
.imagen
    margin-left: 5px
    margin 10px 0
    position: relative;

.mat-column-entrega
    flex: 0 0 128px

.procesos
    justify-content center
    display flex
    aling-items center

.usuario, .tarjeta, .direccion, .proceso
    border 1px solid rgba(0, 0, 0, 0.12)
    border-radius 4px
    margin 5px
    padding 10px
    width 100%
    max-width calc(100% - 30px)
    display flex
    flex-direction column
    font-family: arial


.tarjetaydireccion, .usuarioyproceso
    display flex


.titulo
    display: flex
    justify-content space-between
    aling-items center
    margin-bottom 10px
    h4
        margin 0px
    button
        width 20px
        padding 0px
        margin 0 5px
        background-color rojo1
        color white
        height 18px
        line-height: 18px
        font-size 12px
