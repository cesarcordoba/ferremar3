mat-table.mat-elevation-z8(mat-table, [dataSource]="direcciones")
    ng-container(matColumnDef="ciudad")
        mat-header-cell( *matHeaderCellDef) Ciudad
        mat-cell( *matCellDef="let element")
            mat-icon([style.color]="element.principal === 1 ? 'green ' : 'red'") lens
            span {{element.ciudad}}
    ng-container(matColumnDef="direccion")
        mat-header-cell( *matHeaderCellDef) Cantidad
        mat-cell( *matCellDef="let element") {{element.calle}}, {{element.numero}}
    ng-container(matColumnDef="accion")
        mat-header-cell( *matHeaderCellDef) Accion
        mat-cell( *matCellDef="let transaccion")
            button(mat-button, (click)="cambiar()")
                mat-icon done
    mat-header-row( *matHeaderRowDef="['ciudad','direccion',  'accion']")
    mat-row(*matRowDef="let row; columns: ['ciudad', 'direccion', 'accion'];")
