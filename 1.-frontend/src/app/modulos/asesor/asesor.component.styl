@import  '../../../defaults.styl'


.tool-bar-spacer
    flex 1 1 auto

.contenedor
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

    h1
        text-align: center
    .nav-toolbar
        margin: 0% auto
        text-align: center;
.isMobile
    .nav-toolbar
        position: fixed;
        /* Make sure the toolbar will stay on top of the content as it scrolls past. */
        z-index: 2;
    .sidenav-container
        flex: 1 0 auto
.mat-drawer-content .mat-sidenav-content
    margin: 10px

.sidenav-container
    flex: 1;

.contenido
    min-height 100vh

footer
    margin-top 50px
    height 200px
    background-color: negro


.mat-list-item
        padding 20px
        margin-left: 10px

.mat-nav-list .active-nav
    color: #000000;

.mat-drawer-container
    background-color: rgba(255,255,255, 0.1)


mat-toolbar
    background-color naranja
    height 50px
    color white

mat-sidenav
    background-color naranja
    mat-nav-list
        mat-list-item
            margin 0px
            color white
            font-size 14px
            mat-icon
                color azul4
                margin 0 5px
            &.active-nav
                background-color naranja
                color white
