
@import  '../../../../../defaults.styl'


p
    font-size 15px
    font-weight bolder

.formulario
    height: 100%
    display: flex
    flex-direction: column;
    align-items: center;
    justify-content: center;
    .linea
        display flex
        mat-form-field
            width 100%
            .mat-form-field-wrapper
                margin 0px
                padding 0px
        .logo
            display flex
            justify-content center
            align-items center
            margin 5px
            mat-icon
                height 50px
                width 50px


.grid
    display grid
    grid-gap: 20px 25px
    width 100%
    grid-template-areas "..."
    &.direcciones
        grid-template-columns repeat(2, 1fr);
        grid-template-rows repeat(auto-fill, 230px);
    &.tarjetas
        grid-template-columns repeat(3, 1fr);
        grid-template-rows repeat(auto-fill, 230px);
    .formulario
        grid-row: 1 / 4;
        grid-column: 1 / 3;
    .item
        width 100%
        heigth 100%
        mat-card
            height 100%
            width 100%
            padding 0px
            .tarjeta
                height calc(100% - 36px)
                display: flex
                flex-direction column
                mat-list
                    mat-list-item
                        height 22px
                        font-size 13px
                .logo
                    margin 10px 30px
                    .mat-icon
                        height 90px
                        width 90px
                .info
                    padding 0 20px
                    h3, p
                        margin 3px 0
                    p
                        font-size 12px

            .botones
                display: flex
        .agregar
            width calc(100% - 8px)
            height calc(100% - 8px)
            border-width: 4px;
            border-style: dotted;
            border-color: naranja;
            button
                height 100%
                width 100%
                .central
                    color naranja
                    display: flex
                    justify-content: center
                    align-items center
