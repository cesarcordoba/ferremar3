
@import  '../../../defaults.styl'


.tool-bar-spacer
    flex 1 1 auto

.contenedor
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    h1
        text-align: center
    .nav-toolbar
        margin: 0% auto
        text-align: center;
.isMobile
    .nav-toolbar
        position: fixed;
        /* Make sure the toolbar will stay on top of the content as it scrolls past. */
        z-index: 2;
    .sidenav-container
        flex: 1 0 auto
.mat-drawer-content .mat-sidenav-content
    margin: 10px

.sidenav-container
    flex: 1;


.mat-list-item
        padding 20px
        margin-left: 10px

.mat-nav-list .active-nav
    color: #000000;

.mat-drawer-container
    background-color: rgba(255,255,255, 0.1)

.logo
    display flex
    justify-content center
    align-items center
    .logo-content
        display flex
        img
            height 36px
            width auto
            margin 0 5px
        h1
            color white
            line-height 40px
            font-family Poopins
            @media mobile
                font-size 13px

header
    height 86px !important
    mat-toolbar
        height 50px
        background-color azul1
        display flex
        justify-content space-around
        padding 0 10vw
        .logo
            display flex
            justify-content center
            align-items center
            .logo-content
                display flex
                img
                    height 36px
                    width auto
                    margin 0 5px
                h1
                    color white
        .links
            display flex
            height 40px
            button
                height 40px
            .avatarbutton
                .avatar-content
                    display flex
                    .avatar
                        border-radius 40px
                        overflow hidden
                        height 36px
                        width 36px
                        background-position center
                        background-size cover
                        margin-right 5px
    menu, section
        margin 0px
        padding 0px
        width 100%
        height 36px
        background-color rojo1
    button
        color white
